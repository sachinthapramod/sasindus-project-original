<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- Hero Section with curved bottom -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipToOutline="true"
        android:background="@drawable/hero_image_curved">

        <!-- Background Image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_01"
            android:scaleType="centerCrop" />

        <!-- Dark overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|start"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="start" />
        </LinearLayout>

    </FrameLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name: Guest"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: guest@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Tab Layout for Bookings and Reservations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBookingsTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Room Bookings"
                android:textSize="14sp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/tab_button_selected" />

            <Button
                android:id="@+id/btnReservationsTab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Service Reservations"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:background="@drawable/tab_button_unselected" />

        </LinearLayout>

        <!-- Bookings Section -->
        <LinearLayout
            android:id="@+id/layoutBookings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Room Bookings"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- No Bookings Message -->
            <TextView
                android:id="@+id/tvNoBookings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="No room bookings found.\n\nYour booking history will appear here once you make reservations."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBookings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Reservations Section -->
        <LinearLayout
            android:id="@+id/layoutReservations"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Service Reservations"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- No Reservations Message -->
            <TextView
                android:id="@+id/tvNoReservations"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="No service reservations found.\n\nYour reservation history will appear here once you make reservations."
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewReservations"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
