<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Luxe.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/surface_color</item>
        <item name="boxStrokeColor">@color/accent_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/on_surface</item>
        <item name="android:textColorHint">@color/on_surface</item>
    </style>

    <style name="Widget.Luxe.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface_color</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="strokeColor">@color/accent_color</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.Luxe.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/playfair_display</item>
        <item name="android:textColor">@color/on_background</item>
    </style>

    <style name="TextAppearance.Luxe.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/playfair_display</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Luxe.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>
</resources>

